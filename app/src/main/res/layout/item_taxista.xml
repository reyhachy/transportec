                    />

                <TextView
                    android:id="@+id/ta_no"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="No. Taxi"
                    android:textSize="15dp" />
            </LinearLayout>

            </LinearLayout>

</RelativeLayout>