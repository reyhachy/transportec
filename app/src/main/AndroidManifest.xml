<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edelafa.transportec">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Transportec.Activities.LogginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Se asignan las demas Activity a utilizar -->
        <activity
            android:name=".Transportec.Activities.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Transportec.Activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Transportec.Activities.ServiceActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Transportec.Activities.InfoTaxistaActivity"
            android:screenOrientation="portrait"/>


    </application>

</manifest>